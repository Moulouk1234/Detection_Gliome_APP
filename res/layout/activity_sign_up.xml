<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SignUpActivity"
    android:paddingTop="20dp"
    android:background="#FAF9FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="28dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/back"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Account"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
        android:padding="16dp">

        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/iconuserblue"
            android:layout_marginBottom="16dp" />
        <Button
            android:id="@+id/uploadImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:text="Upload Image" />

    </LinearLayout>
        <TextView
            android:text="Full name"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="12dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/fullNameEditText"
            android:hint="Full Name"
            android:inputType="text"
            android:textColorHint="#0066FF"
            android:background="@drawable/edittext_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="12dp"/>

        <TextView
            android:text="Password"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="12dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/passwordEditText"
            android:hint="***********"
            android:inputType="textPassword"
            android:textColorHint="#0066FF"
            android:background="@drawable/edittext_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="12dp"/>

        <TextView
            android:text="Email"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="12dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/emailEditText"
            android:hint="example@example.com"
            android:textColorHint="#0066FF"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>

        <TextView
            android:text="Mobile Number"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="12dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/mobileEditText"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:textColor="#000000"
            android:textColorHint="#0066FF"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>

        <TextView
            android:text="Specialty"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="12dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/specialtyEditText"
            android:hint="Example: Neurosurgeon, Oncologist..."
            android:textColorHint="#0066FF"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>

        <TextView
            android:text="Profile Description"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="12dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/profileDescEditText"
            android:hint="Describe your career path, experience, and achievements..."
            android:textColorHint="#0066FF"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:inputType="textMultiLine"
            android:minLines="4"
            android:maxLines="8"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>

        <TextView
            android:text="Starting Year of Career"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="12dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/startYearEditText"
            android:hint="Enter year (e.g. 2015)"
            android:textColorHint="#0066FF"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>

        <TextView
            android:text="Workplace"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="12dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/workplaceEditText"
            android:hint="Hospital or Clinic Name"
            android:textColorHint="#0066FF"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:text="@string/privacy_policy"
            android:textColor="#7A7A7A"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/signUpButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Sign UP"
            android:textStyle="bold"
            android:backgroundTint="#0066FF"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</ScrollView>
